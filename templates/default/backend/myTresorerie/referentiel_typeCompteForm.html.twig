{% extends 'default/backend/index.html.twig' %}

{% block titre_page %}TRESORERIE{% endblock %}

{% block css_header %}
    <link rel="stylesheet" href="{{ asset('assets/vendor/select2/select2.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/vendor/jquery-datatables-bs3/assets/css/datatables.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/vendor/morris/morris.css') }}" />
{% endblock %}

{% block contenu_site %}
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">TYPE DE COMPTE</h2>
            <p class="panel-subtitle">Formulaire de saisie </p>
            <div class="panel-actions">
            <a href="{{ path('app_myTresorerie_referentiel') }}"><button type="button" class="mb-xs mt-xs mr-xs btn-sm btn btn-warning"><i class="fa fa-rotate-left" aria-hidden="true"></i> ANNULER</button></a>
            </div>
        </header>
        <div class="panel-body">
            {{ form_start(form)}}
                <div class="col-md-2 text-justify well info">
                    Une petite description de ce qu'il doit être fait sur cet écran afin de guider l'utiliateur
                </div>
                <div class="col-md-9 col-md-offset-1">
                    <div class="form-group">
                        <label class="col-md-3 control-label">Type de compte</label>
                        <div class="col-md-6">
                            {{ form_widget(form.nom)}}
                        </div>
                    </div> 
                    <div class="form-group panel-subtitle text-danger">
                        <label class="col-md-10 control-label">Mode de paiement autorisé</label>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Retrait espèces</label>
                        <div class="col-md-1">
                            {{ form_widget(form.retraitOK)}}
                        </div>
                        <label class="col-md-3 control-label">Carte bancaire</label>
                        <div class="col-md-1">
                            {{ form_widget(form.carteOK)}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Autre mode de paiement</label>
                        <div class="col-md-1">
                            {{ form_widget(form.autreModePaiementOK)}}
                        </div>
                    </div> 
                    <div class="form-group panel-subtitle text-danger">
                        <label class="col-md-10 control-label">Mode de dépot autorisé</label>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Dépot chèque</label>
                        <div class="col-md-1">
                            {{ form_widget(form.depotChequeOK)}}
                        </div>
                    </div>
                    <div class="col-md-9 text-right">
                        <input type="submit" class="btn btn-sm btn-success" value="VALIDER"/>
                    </div>     
                </div>

            {{ form_end(form)}}
        </div>
    </section>
    {% block footer_Script %}{% endblock %}
{% endblock %}