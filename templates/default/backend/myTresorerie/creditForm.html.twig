{% extends 'default/backend/index.html.twig' %}

{% block titre_page %}TRESORERIE{% endblock %}

{% block css_header %}
    <link rel="stylesheet" href="{{ asset('assets/vendor/select2/select2.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/vendor/jquery-datatables-bs3/assets/css/datatables.css') }}" />
    <link rel="stylesheet" href="{{ asset('assets/vendor/morris/morris.css') }}" />
{% endblock %}

{% block contenu_site %}
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">FORMULAIRE BANQUE</h2>
            <p class="panel-subtitle">Formulaire de saisie </p>
            <div class="panel-actions">
            <a href="{{ path('app_myTresorerie_referentiel') }}"><button type="button" class="mb-xs mt-xs mr-xs btn-sm btn btn-warning"><i class="fa fa-rotate-left" aria-hidden="true"></i> ANNULER</button></a>
            </div>
        </header>
        <div class="panel-body">
            {{ form_start(form)}}
                <div class="col-md-10 col-md-offset-1">
                    <div class="form-group">
                        <label class="col-md-3 control-label">DATE SIGNATURE</label>
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                {{ form_widget(form.dateSignature) }}
                            </div>
                        </div>
                        <div class="col-md-2 text-right">
                        CLOTURE <div class="switch switch-sm switch-success">{{ form_widget(form.estCloture)}}</div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">COMPTE</label>
                        <div class="col-md-5">
                            {{ form_widget(form.compteID) }}
                        </div>
                        <div class="col-md-2">
                            <a href="{{ path('app_societes_ajout') }}" class="btn btn-sm btn-info btn-block">AJOUT</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">LIBELLE</label>
                        <div class="col-md-5">
                            {{ form_widget(form.libelle) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">1ERE ECHEANCE</label>
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </span>
                                {{ form_widget(form.dateEcheanceOne) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">SOMME EMPRUNTEE</label>
                        <div class="col-md-5">
                            {{ form_widget(form.montant) }}
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label">CATEGORIE ECHEANCE</label>
                        <div class="col-md-5">
                            {{ form_widget(form.categorieID) }}
                        </div>
                    </div>   
                    <div class="form-group">
                        <label class="col-md-3 control-label">DUREE (MOIS)</label>
                        <div class="col-md-5">
                            {{ form_widget(form.duree) }}
                        </div>
                    </div>   
                    <div class="form-group">
                        <label class="col-md-3 control-label">TAUX</label>
                        <div class="col-md-5">
                            {{ form_widget(form.taux) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">MONTANT ASSURANCE</label>
                        <div class="col-md-5">
                            {{ form_widget(form.montantAssurance) }}
                        </div>
                    </div>   
                    <div class="col-md-9 text-right">
                        <input type="submit" class="btn btn-sm btn-success" value="VALIDER"/>
                    </div>
                </div> 
            {{ form_end(form)}}
        </div>
    </section>
    {% block footer_Script %}{% endblock %}
{% endblock %}