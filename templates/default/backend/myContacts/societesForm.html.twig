{% extends 'default/backend/index.html.twig' %}

{% block titre_page %}MES CONTACTS{% endblock %}

{% block contenu_site %}
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <div class="mb-md">
                    <a href="{{ path('app_mycontacts') }}"><button class="btn btn-sm btn-warning"><i class="fa fa-rotate-left"></i> ANNULER</button></a>
                </div>
            </div>

            <h2 class="panel-title">SOCIETE</h2>
            <p class="panel-subtitle">Formulaire de saisie</p>
        </header>

        <div class="panel-body">
            {{ form_start(form)}}
                <div class="row">
                    <div class="col-md-8">
                     <section class="panel">
                            <header class="panel-heading">
                                <h2 class="panel-title">Détails</h2>
                                <div class="panel-actions">
                                    <div class="form-group text-right">
                                        <label class="col-md-5 control-label">Archivé</label>
                                        <div class="col-md-3">
                                            <div class="switch switch-sm switch-success">
                                                {{ form_widget(form.archive)}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </header>
                            
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Nom <span class="required">*</span></label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.nom)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Email</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.email)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Téléphone</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.telephone)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">URL</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.url)}}
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Libellé adresse</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.libelle_adresse)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Code Postal/Ville</label>
                                    <div class="col-sm-2">
                                        {{ form_widget(form.code_postal)}}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.ville)}}
                                    </div>
                                </div>
                                <hr>
                                <div class="form-group">
                                    <label class="col-sm-8 control-label">Définir cette société comme une banque dans le module TRESORERIE</label>
                                    <div class="col-sm-4">
                                        <div class="switch switch-sm switch-success">
                                            {{ form_widget(form.estBanque)}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>  
                    <div class="col-md-4">
                        <section class="panel">
                            <header class="panel-heading">
                                <div class="panel-actions">
                                    <a href="#" id="form_imageLogo_file" class="fa fa-search"></a>
                                </div>
                                <h2 class="panel-title">Logo</h2>
                            </header>
                            <div class="panel-body">
                                <div class="photo">
                                    {{ form_widget(form.imageLogo)}}
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="col-md-12 text-right">
                   <input type="submit" class="btn btn-sm btn-success" value="VALIDER"/>
                </div>
            {{ form_end(form)}}
        </div>
    </section>
{% endblock %}

{% block footer_script %}
    <script src="{{ asset('assets/vendor/codemirror/lib/codemirror.js') }}"></script>  
    <script src="{{ asset('assets/vendor/bootstrap-maxlength/bootstrap-maxlength.js') }}"></script>
    <script src="{{ asset('assets/vendor/ios7-switch/ios7-switch.js') }}"></script>
{% endblock %}

