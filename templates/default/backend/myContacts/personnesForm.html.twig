{% extends 'default/backend/index.html.twig' %}

{% block titre_page %}MES CONTACTS{% endblock %}

{% block contenu_site %}
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <div class="mb-md">
                    <a href="{{ path('app_mycontacts') }}"><button class="btn btn-warning btn-sm"><i class="fa fa-rotate-left"></i> ANNULER</button></a>
                </div>
            </div>

            <h2 class="panel-title">PERSONNE</h2>
            <p class="panel-subtitle">Formulaire de saisie</p>
        </header>

        <div class="panel-body">
            {{ form_start(form)}}
                <div class="row">
                    <div class="col-md-4">
                        <section class="panel">
                            <header class="panel-heading">
                                <div class="panel-actions">
                                    <a href="#" class="fa fa-search"></a>
                                </div>
                                <h2 class="panel-title">Photo</h2>
                            </header>
                            <div class="panel-body">
                                <div class="photo">
                                    <img src="{{ asset('assets/images/avatar.png') }}" alt="avatar">
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="col-md-8">
                        <section class="panel">
                            <header class="panel-heading">
                                <h2 class="panel-title">Identité</h2>
                                <div class="panel-actions">
                                    <div class="form-group text-right">
                                        <label class="col-md-5 control-label">ACTIF</label>
                                        <div class="col-md-3">
                                            <div class="switch switch-sm switch-success">
                                                {{ form_widget(form.estActif)}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </header>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Nom <span class="required">*</span></label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.nom)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Prénom <span class="required">*</span></label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.prenom)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Téléphone</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(form.telephone)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Email <span class="required">*</span></label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                            {{ form_widget(form.email)}}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Date de naissance</label>
                                    <div class="col-sm-8">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                            {# <input type="text" data-plugin-datepicker value="{{ personne.dateNaissance|date('d-m-Y') }}" class="form-control"> #}
                                            {{ form_widget(form.dateNaissance)}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <input type="submit" class="btn btn-sm btn-success" value="VALIDER" />
                    </div>
                </div>
            </div>
        {{ form_end(form)}}
    </section>

{% endblock %}

{% block footer_script %}
    <script src="{{ asset('assets/vendor/codemirror/lib/codemirror.js') }}"></script>  
    <script src="{{ asset('assets/vendor/bootstrap-maxlength/bootstrap-maxlength.js') }}"></script>
    <script src="{{ asset('assets/vendor/ios7-switch/ios7-switch.js') }}"></script>
{% endblock %}