{% extends 'default/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
	<section class="body-sign">
		<div class="center-sign">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
			{#<a href="/" class="logo pull-left">
				<img src="../assets/images/logo.png" height="54" alt="Porto Admin" />
			</a> #}

			<div class="panel panel-sign">
				<div class="panel-title-sign mt-xl text-right">
					<h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Connexion</h2>
				</div>
				<div class="panel-body">
					<form action="" method="post">
						<div class="form-group mb-lg">
							<label for="email">Nom d'utilisateur</label>
							<div class="input-group input-group-icon">
								<input name="email" value="{{ last_username }}" id="email" type="text" class="form-control input-lg" autocomplete="email" required autofocus/>
								<span class="input-group-addon">
									<span class="icon icon-lg">
										<i class="fa fa-user"></i>
									</span>
								</span>
							</div>
						</div>
  
						<div class="form-group mb-lg">
							<div class="clearfix">
								<label for="password" class="pull-left">Mot de passe</label>
							</div>
							<div class="input-group input-group-icon">
								<input name="password" id="password" type="password" class="form-control input-lg" autocomplete="current-password" required/>
								<span class="input-group-addon">
									<span class="icon icon-lg">
										<i class="fa fa-lock"></i>
									</span>
								</span>
							</div>
						</div>

                       <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
						<div class="row"> 
							<div class="col-sm-4 pull-right">
                                <button class="btn btn-sm btn-info" type="submit">CONNEXION</button>
							</div>
						</div>
					</form>
				</div>
			</div>

			{#<p class="text-center text-muted mt-md mb-md">&copy; Copyright 2018. Tout droit réservé. Template créé par <a href="https://colorlib.com">Colorlib</a>.</p>#}
		</div>
	</section>
</form>
{% endblock %}
