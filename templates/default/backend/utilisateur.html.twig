{% extends 'default/backend/index.html.twig' %}

{% block titre_page %}CONFIGURATION{% endblock %}

{% block contenu_site %}
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <div class="mb-md">
                    <a href="{{ path('app_configuration') }}"><button class="btn btn-sm btn-warning"><i class="fa fa-rotate-left"></i> ANNULER</button></a>
                </div>
            </div>

            <h2 class="panel-title">UTILISATEUR</h2>
            <p class="panel-subtitle">Formulaire de saisie</p>
        </header>

        <div class="panel-body">
            {% for flashError in app.flashes('passwordChanged') %}
                <div class="alert alert-success" role="alert">{{ flashError }}</div>
            {% endfor %}
            {{ form_start(registrationForm)}}
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <section class="panel">
                            <div class="panel-body">
                                {% for flashError in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Email</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(registrationForm.email)}}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Password</label>
                                    <div class="col-sm-8">
                                        {{ form_widget(registrationForm.plainPassword, {
                                            label: 'Password'
                                        }) }}
                                    </div>
                                </div>
                            </div>
                        </section>
                        <div class="col-md-12 text-right">
                            <input type="submit" class="btn btn-sm btn-success" value="VALIDER"/>
                        </div>
                    </div>
                </div>
            {{ form_end(registrationForm)}}
        </div>
    </section>
{% endblock %}
